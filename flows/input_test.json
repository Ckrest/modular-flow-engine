{
  "name": "input_test",
  "description": "Test plan with user-provided inputs",

  "inputs": {
    "data_file": {
      "type": "path",
      "required": true,
      "description": "Path to input data file"
    },
    "prefix": {
      "type": "string",
      "required": true,
      "description": "Prefix to add to each item"
    },
    "limit": {
      "type": "integer",
      "required": false,
      "default": 5,
      "description": "Max items to process"
    }
  },

  "components": {
    "data": {
      "type": "source/text_list",
      "config": {
        "path": "{$inputs.data_file}"
      }
    },
    "results": {
      "type": "sink/collector",
      "config": {}
    }
  },

  "flow": [
    {"source": "data"},
    {
      "loop": {
        "over": "data.items",
        "as": "item",
        "steps": [
          {
            "call": "results",
            "inputs": {
              "item": "{prefix}_{item}"
            }
          }
        ]
      }
    },
    {"sink": "results"}
  ],

  "settings": {
    "output_mode": "normal"
  }
}
