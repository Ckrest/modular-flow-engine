{
  "name": "test_file_only",
  "description": "Test file-only destination (no return)",
  "components": {
    "data": {
      "type": "source/literal",
      "config": {"value": [1, 2, 3]}
    },
    "writer": {
      "type": "sink/json_writer",
      "config": {
        "path": "numbers.json",
        "destinations": ["file"]
      }
    }
  },
  "flow": [
    {"source": "data"},
    {"loop": {"over": "data.value", "as": "num", "steps": [
      {"call": "writer", "inputs": {"number": "{num}"}}
    ]}},
    {"sink": "writer"}
  ]
}
